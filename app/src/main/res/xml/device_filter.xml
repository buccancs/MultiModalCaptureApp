    <usb-device vendor-id="0x1f3a" product-id="0x1001" />
    <usb-device vendor-id="0x1f3a" product-id="0x1002" />
    <usb-device vendor-id="0x1f3a" product-id="0x1003" />
    <usb-device vendor-id="0x1f3a" product-id="0x1004" />
    <usb-device vendor-id="0x1f3a" product-id="0x1005" />
    <usb-device vendor-id="0x1f3a" product-id="0x1006" />
    <usb-device vendor-id="0x1f3a" product-id="0x1007" />
    <usb-device vendor-id="0x1f3a" product-id="0x1008" />
    <usb-device vendor-id="0x1f3a" product-id="0x1009" />
    <usb-device vendor-id="0x1f3a" product-id="0x100a" />
    <usb-device vendor-id="0x1f3a" product-id="0x100b" />
    <usb-device vendor-id="0x1f3a" product-id="0x100c" />
    <usb-device vendor-id="0x1f3a" product-id="0x100d" />
    <usb-device vendor-id="0x1f3a" product-id="0x100e" />
    <usb-device vendor-id="0x1f3a" product-id="0x100f" />
    <usb-device vendor-id="0x1f3a" product-id="0x1010" />
    
    <!-- Additional Topdon vendor ID: 0x3538 -->
    <usb-device vendor-id="0x3538" product-id="0x0902" />
    
    <!-- Generic USB Video Class (UVC) cameras -->
    <!-- Class 14 = Video, Subclass 1 = Video Control, Subclass 2 = Video Streaming -->
    <usb-device class="14" subclass="1" protocol="0" />
    <usb-device class="14" subclass="2" protocol="0" />
    
    <!-- Generic USB cameras that may not follow UVC standard -->
    <!-- Class 239 = Miscellaneous Device Class (often used by cameras) -->
    <usb-device class="239" subclass="2" protocol="1" />
</resources>